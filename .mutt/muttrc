#source ~/.mutt/colors/solarized-light.muttrc
#source ~/.mutt/colors/zenburn.muttrc
#source ~/.mutt/colors/davecolor.muttrc
#source ~/.mutt/colors/Huggie.muttrc
source ~/.mutt/colors/aperiodic.muttrc

